@import '_normalize.styl'
@import '_typography.styl'
@import '_animations.styl'

body
  background offwhite

.photo-grid
  display flex
  flex-wrap wrap
  width:100%
  max-width 1200px
  margin 0 auto

.grid-figure
  flex-basis calc(33.333% - 4rem)
  margin 0 2rem 2rem 2rem
  padding 2rem
  border 1px solid lightgray
  background white
  box-shadow 0 0 0 5px rgba(0,0,0,0.03);
  position relative

  @media (max-width: 768px)
    flex-basis calc(50% - 4rem)

  @media (max-width: 480px)
    flex-basis calc(100% - 4rem)

.single-photo
  @extend .grid-figure
  max-width 900px
  margin 0 auto 25px
  display flex
  background white

  @media (max-width: 768px)
    flex-direction: column
    justify-content: center

  .grid-figure
    box-shadow none
    margin 0 2rem 0 0
    border 0
    padding 0
    flex 1 0 60%
    max-width 60%

    @media (max-width: 768px)
      flex 1 0 100%
      max-width none
      margin-right 0

  .comments
    flex 1 0 40%
    max-width 40%

    @media (max-width: 768px)
      flex 1 0 100%
      max-width none
      margin-right 0

  .grid-photo
    width 100%
    margin 0

.grid-photo
  position relative
  display block
  width 100%
  padding-top 100%
  margin 0 auto
  max-width none

  img
    position absolute
    top 0
    left 0
    width:100%
    height:100%

// Comments
.remove-comment
  background none
  border 0
  line-height 1
  opacity 0
  &:hover
    color red

.comment
  border-bottom 1px solid lightgrey
  padding 0.5rem 0
  p
    font-size 1.2rem
    margin 0
  strong
    color blue
    margin-right 5px
  &:hover
    .remove-comment
      opacity 1
 
.submit-button, .post-photo
  display block
  width 150px
  border 1px solid #edeeed
  border-radius: 30px
  background-color: blue !important
  color #fff

.post-photo
  position relative
  left: 100%
  transform: translateX(calc(-100% - 25px))
  margin-top: 25px
  text-align: center
  text-decoration: none
  padding 10px 15px
  font-size 14px

.uploaded-photo
  display: block
  margin: 25px auto

.comment-form 
  max-width: 500px
  margin:0 auto
  margin-top: 25px

  input, textarea
    width 100%
    border 0
    font-size 1.3rem
    padding 1rem 0
    border-bottom 1px solid lightgrey
    outline none
    resize none
    background: transparent

  .submit-button
    width: 150px
    margin: 20px auto 0

.grid-photo-wrap
  position relative
  
.likes-heart
  background url(http://f.cl.ly/items/3Y373q2Q3J3Y1j203n0m/Bitmap-3.png) center no-repeat
  background-size contain
  font-size 2rem
  padding 1rem
  position absolute
  color blue
  left 50%
  top 50%
  pointer-events none
  
.spinner
  position absolute
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)
  &:after
    content: ""
    display: block
    width: 50px
    height: 50px
    border 5px solid #f2f2f2
    border-top-color:  blue
    border-radius: 50%
    animation spin .7s infinite linear

/*  
  Buttons  
*/

.control-buttons
  display flex
  justify-content space-between
    
button, .button
  border 2px solid lighten(grey, 90%)
  background none
  flex-basis 48%
  display inline-block
  line-height 2
  text-decoration none
  padding 5px
  text-align center
  font-size 15px
  color blue
  transition all 0.2s
  box-sizing padding-box
  &:hover, &:focus
    border-color blue
    outline 0



.speech-bubble
  size = 1.25rem
  width size * 1.2
  height size 
  background blue
  display inline-block
  border-radius 50%
  position relative
  margin-right 5px
  &:after
    display inline-block
    position absolute
    content ''
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 0 size size 0
    border-color: transparent blue transparent transparent
    top 30%
    left 0

  
  

